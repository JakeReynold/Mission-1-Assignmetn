@{
    ViewData["Title"] = "Grade Calculator";
}

@model GradeCalculatorModel;

<!--Grade calculator page title-->
<h1>Grade Calculator</h1>

@*Gif file to make the page more fun*@
<img src="~/img/mathematics-math.gif" height="125"/>

<!-- Instructions for calculator form -->
<p>Enter projected percentages for the following areas</p>

@*Grade calculator form*@
<form method="post">
    <label>Assignments:</label>
    <input id="assignments" asp-for="Assignments"/> <br />
    <label>Group Project:</label>
    <input id="project" asp-for="Projects"/> <br />
    <label>Quizzes:</label>
    <input id="quizzes" asp-for="Quizzes"/> <br />
    <label>Exams:</label>
    <input id="exams" asp-for="Exams"/> <br />
    <label>INTEX:</label>
    <input id="intex" asp-for="Intex"/> <br />
    <input id="SubmitBtn" type="submit" value="Calculate" />
</form>

@*Div tag that displays an error when requirements aren't met for the fields in the form*@
<div asp-validation-summary="All"></div>
